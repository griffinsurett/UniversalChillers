---
// src/components/Theme.astro
import '../styles/global.css';
---
<!-- You may include additional theme-related meta tags here -->
<link rel="icon" href="/univeral-chillers-icon.svg" type="image/x-icon" />
<meta name="theme-color" content="" />
<meta name="apple-mobile-web-app-status-bar-style" content="#232f49" />
<script>
  // wait till DOM is ready
  document.addEventListener("DOMContentLoaded", () => {
    const rootStyles = getComputedStyle(document.documentElement);
    const primary = rootStyles.getPropertyValue("--color-bg").trim();
    if (primary) {
      document
        .querySelector('meta[name="theme-color"]')
        ?.setAttribute("content", primary);
    }
  });
</script>