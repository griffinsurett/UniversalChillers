---
// src/components/Forms/Inputs/Select.astro
const {
  label,
  name,
  options = [],
  required = false,
  selectClass = "",
  wrapperClass = "",
  labelClass = ""
} = Astro.props;
---
<div class={wrapperClass}>
  {label && (
    <label for={name} class={labelClass}>
      {label}
      {required && <span class="text-primary ml-1">*</span>}
    </label>
  )}
  <select
    id={name}
    name={name}
    required={required}
    class={selectClass}
  >
    <option value="" disabled selected>
      Select {label || name}
    </option>
    {options.map(opt => (
      <option value={opt.value}>{opt.label}</option>
    ))}
  </select>
</div>
