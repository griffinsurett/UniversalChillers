---
// src/components/inputs/TextInput.astro
// Props:
// - label: (optional) label text for the input
// - name: input name & id
// - type: input type (default "text")
// - placeholder: (optional)
// - value: (optional)
// - required: (optional, boolean)
// - inputClass: Tailwind (or custom) classes for the input element
// - wrapperClass: Tailwind classes for the outer container
const {
  label,
  name,
  type = "text",
  placeholder = "",
  value = "",
  required = false,
  inputClass = "",
  wrapperClass = "",
  labelClass = "",
} = Astro.props;
---
<div class={wrapperClass}>
  {label && (
    <label for={name} class={labelClass}>
      {label}
      {required && <span class="text-primary ml-1">*</span>}
    </label>
  )}
  <input
    id={name}
    name={name}
    type={type}
    placeholder={placeholder}
    value={value}
    required={required}
    class={inputClass}
  />
</div>
