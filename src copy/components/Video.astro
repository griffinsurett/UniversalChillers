---
// src/components/Video.astro
import { getImage } from 'astro:assets';

const {
  src: videoSrc,
  poster: posterSrc,
  autoplay = false,
  loop = false,
  muted = false,
  posterOptions = {
    width: 1280,
    format: 'webp',
    quality: 50,
    placeholder: 'blur'
  },
  /** Any other <video> props: controls, muted, autoplay, loop, class, etc. */
  ...videoProps
} = Astro.props;

// Optimize the poster if one was provided
let optimizedPoster;
if (posterSrc) {
  optimizedPoster = await getImage({ src: posterSrc }, posterOptions);
}
---
<video
  src={videoSrc}
  poster={optimizedPoster?.src || posterSrc}
  {...videoProps}
  playsinline
  preload="metadata"
  autoplay={autoplay}
  loop={loop}
  muted={muted}
  class=`aspect-video`
>
  <source src={videoSrc} type="video/mp4" />
  <p>Your browser doesnâ€™t support HTML5 video. 
    <a href={videoSrc}>Download the video</a>.
  </p>
</video>
