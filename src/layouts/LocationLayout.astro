---
import MainPageLayout from "@/layouts/MainPageLayout.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { SiteData } from "@/content/SiteData";
const {
  collection,
  entry,
  title,
  description,
  keywords,
  ogType,
  ...rest
} = Astro.props;
---
<BaseLayout
  title={`${SiteData.title} | Chiller, Cooling Tower and Boiler Experts in ${title}`}
  description={SiteData.description}
>
  <MainPageLayout
    collection={collection}
    entry={entry}
    title={title}
    description={description}
    keywords={keywords}
    ogType={ogType}
    {...rest}
  />
</BaseLayout>