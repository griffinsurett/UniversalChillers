---
// src/pages/index.astro
import ExtendedLayout from "@/layouts/ExtendedLayout.astro";
import Section from "@/components/Section/Section.astro";
import Card from "@/components/LoopComponents/Card";
---
<ExtendedLayout title="Welcome to Greactstro!" description="Your gateway to amazing projects.">
  <!-- Hero Section -->
<Section
  variant="primaryHero"
  heading={{ before:"Heating.", text: "Cooling.", after:"Handled.", tagName: "h1", class: "flex flex-col" }}
  buttons={[
    { text: "Get A Quote", link: "/contact-us", variant: "secondary" },
  ]}
/>

  <!-- Services -->
  <Section
    collection="services"
    query="getAll"
  />

  <!-- Clients -->
  <Section
    sectionClass="animate-on-appear"
    collection="clients"
    query="getAll"
    heading={{ text: "Our Clients", tagName: "h2" }}
  />

  <!-- Projects -->
  <Section
    collection="projects"
    query="getAll"
    heading={{ text: "Our Projects", tagName: "h2" }}
  />

<!-- Testimonials -->
<Section
  collection="testimonials"
  query="getAll"
/>


  <Section collection="faq" query="getAll" />

</ExtendedLayout>